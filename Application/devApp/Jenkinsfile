pipeline {
    agent any

    environment {
        AWS_REGION      = "us-east-1"         
        CLUSTER_NAME    = "task_09-sachith-dev-ecs-cluster"    
        SERVICE_NAME    = "task_09-sachith-dev_service"     
        TASK_DEF_NAME   = "dev_task"         
        ECR_REPO        = "041360578609.dkr.ecr.us-east-1.amazonaws.com/task_09-sachith-dev-ecr" 
        IMAGE_TAG       = "build-${env.BUILD_NUMBER}"
    }

    stages {

        stage('Checkout SCM') {
            steps {
                checkout scm
            }
        }


        stage('Build Docker Image') {
            steps {
                script {
                    echo "Building Docker image..."
                    sh '''
                    cd Application/devApp
                    docker build -t ${ECR_REPO}:${IMAGE_TAG} .
                    '''
                }
            }
        }

        stage('Authenticate to DEV ECR') {
            steps {
                script {
                    echo "Logging in to DEV ECR..."
                    sh '''
                        aws ecr get-login-password --region $AWS_REGION | docker login --username AWS --password-stdin $ECR_REPO
                    '''
                }
            }
        }

        stage('Push Docker Image to DEV ECR') {
            steps {
                script {
                    echo "Pushing Docker image to DEV ECR.."
                    sh "docker push ${ECR_REPO}:${IMAGE_TAG}"
                }
            }
        }
        stage('Update DEV ECS Task Definition') {
            steps {
        script {
            echo "Updating the DEV task definition..."
            sh '''
                # Fetch current task definition
                aws ecs describe-task-definition \
                    --task-definition $TASK_DEF_NAME \
                    --query 'taskDefinition' \
                    > taskdef.json

                # Remove read-only fields
                jq 'del(
                    .taskDefinitionArn,
                    .revision,
                    .status,
                    .requiresAttributes,
                    .compatibilities,
                    .registeredAt,
                    .registeredBy
                )' taskdef.json > taskdef-stripped.json

                # Update container image
                jq --arg IMAGE "$ECR_REPO:$IMAGE_TAG" \
                    '.containerDefinitions[0].image = $IMAGE' \
                    taskdef-stripped.json \
                    > new-taskdef.json

                # Register the cleaned-up task definition
                aws ecs register-task-definition \
                    --cli-input-json file://new-taskdef.json \
                    > new-taskdef-output.json

                NEW_REV=$(jq -r '.taskDefinition.taskDefinitionArn' new-taskdef-output.json)
                echo "New task definition ARN: $NEW_REV"
                    '''
                }
            }
        }

        stage('Deploy to DEV ECS Service') {
            steps {
                script {
                    echo "Updating DEV ECS service with new task definition..."
                    sh '''
                        NEW_REV=$(jq -r '.taskDefinition.taskDefinitionArn' new-taskdef-output.json)
                        aws ecs update-service \
                            --cluster $CLUSTER_NAME \
                            --service $SERVICE_NAME \
                            --task-definition $NEW_REV \
                            --force-new-deployment
                    '''
                }
            }
        }

    }   

    post {
        success {
            echo "Deployment to DEV Successful"
        }
        failure {
            echo "Deployment to DEV Failed!"
        }
        always {
            echo "Cleaning workspace leftovers..."
            sh '''
                docker system prune -af || true
            '''
            cleanWs()
        }   
    }
}
